{
	"name": "@nixstrom/polkadot-icons",
	"version": "0.1.1",
	"private": false,
	"description": "SVG icons for Polkadot",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nixstrom/polkadot-react-icons.git"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"type": "module",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib"
	],
	"keywords": [
		"icons",
		"svg icons",
		"polkadot"
	],
	"author": "hello@tinybits.dk",
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf lib && mkdir lib && echo 'DELETED'",
		"clean:index": "rimraf src/index.ts",
		"build": "pnpm run prebuild && tsc && echo 'Build complete'",
		"generate": "pnpm run clean:index && rimraf src/components && node scripts/generate.js",
		"prettier": "prettier --write ."
	},
	"devDependencies": {
		"@svgr/core": "^6.5.1",
		"@types/node": "^18.11.9",
		"@types/react": "^18.0.0",
		"pascalcase": "^2.0.0",
		"prettier": "^2.8.0",
		"rimraf": "^3.0.2",
		"typescript": "^4.8.4"
	},
	"peerDependencies": {
		"react": ">=17.0.0"
	}
}
